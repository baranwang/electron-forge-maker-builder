{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["dist", "node_modules"],
  "watchOptions": {
    "excludeDirectories": ["dist", "node_modules"]
  }
}
